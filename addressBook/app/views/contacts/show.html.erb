<p style="color: green"><%= notice %></p>
<div class="d-flex align-items-center justify-content-center">
  <h1>Contact Info</h1>
</div>

<div class="d-flex align-items-center justify-content-center">
  <%= render @contact %>
</div>
<br>
<div class="d-flex align-items-center justify-content-center">
  <%= link_to "Contact Phone Numbers", phone_numbers_path(first_name:@contact.firstName, middle_name:@contact.middleName, last_name:@contact.lastName), :class => "btn btn-primary" %> |
  <%= link_to "Edit this contact", edit_contact_path(@contact), :class => "btn btn-primary" %>|
  <%= button_to "Destroy this contact", @contact, method: :delete, :remote => true,  :class => "delete_contact btn btn-primary" %> |
  <%= link_to "Back to contacts", contacts_path, :class => "btn btn-primary" %>
</div>
