<% if flash[:notice] %>
  <%= content_tag :p, flash[:notice] %>
<% end %>
<div class="d-flex align-items-center justify-content-center">
  <%= content_tag :h1, "Address Book" %>
</div>
<div class="d-flex align-items-center justify-content-center">
  <%= content_tag :h3, "Please Log in" %>
</div>

<div class="d-flex align-items-center justify-content-center">
  <%= form_with url: sessions_path do |f| %>
    <div class="mb-3">
    <%= f.label :username, style: "display: block", :class => "form-label" %>
    <%= f.text_field :username, :class => "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :password, style: "display: block", :class => "form-label" %>
    <%= f.password_field :password, :class => "form-control" %>
  </div>
  <br/>
  <div class="mb-3">
    <%= link_to "Create an Account", new_user_path, :class => "btn btn-primary" %> |
    <%= f.submit "Sign In!", :class => "btn btn-primary" %>
  </div>
  <% end %>
</div>

